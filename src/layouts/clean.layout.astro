---
import MainLayout from "./main.layout.astro";
import Navbar from "../templates/navbar.guest.template.astro";
import Footer from "../templates/footer.guest.template.astro";
import { db, Product } from "astro:db";

const products = await db.select().from(Product).all();
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<MainLayout title={title}>
	<div
		class="flex
		overflow-hidden
        bg-gradient-to-b
		text-gray-800
        dark:text-white
		from-primary-900
		to-primary-600
        dark:from-primary-600
		dark:to-primary-200"
	>
		<div
			id="main-content"
			class="relative
			w-full
			h-full
			min-h-screen
			max-w-screen-2xl
			mx-auto
			overflow-y-auto
			shadow-md"
		>
			<!-- BREADCRUMBS -->
			<div
				class="flex
				flex-col
				pt-16
				items-center
				justify-center
				align-middle
				rounded-md"
			>
				<slot />
			</div>
			<Footer />
		</div>
	</div></MainLayout
>
